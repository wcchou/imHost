{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^client-module\\.json$"
      ],
      "matchStrings": [
       "\"([\\w]+)\":[\\s\\w\\{]+\"version\":[\\s\"]+(?<currentValue>\\d+.\\d+.\\d+.\\d+)\",\\s+\"path\":\\s+\"(?<depName>[\\w\\/]+)\"" 
      ],
      "extractVersionTemplate": "(?<major>\\d+).(?<minor>\\d+).(?<patch>\\d+).(?<build>\\d+)",
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "{{{depName}}}",
      "depNameTemplate": "https://github.com/{{{depName}}}"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["[\\w\\/]+imLib$"],
      "versioning": "(?<major>\\d+).(?<minor>\\d+).(?<patch>\\d+).(?<build>\\d+)",
      "automerge": true,
      "platformAutomerge": true,
      "stabilityDays": 0,
      "prCreation": "immediate",
      "prPriority": 1000
    }
  ]
}
