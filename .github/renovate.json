{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^client-module\\.json$"
      ],
      "matchStrings": [
        "*"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "loose",
      "packageNameTemplate": "wcchou/imLib",
      "depNameTemplate": "https://github.com/imLib"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["[\\w\\/]+imLib$"],
      "versioning": "loose",
      "automerge": true,
      "platformAutomerge": true,
      "stabilityDays": 0,
      "prCreation": "immediate",
      "prPriority": 1000
    }
  ]
}
